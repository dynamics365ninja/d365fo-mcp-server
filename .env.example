# Server Configuration
PORT=8080
NODE_ENV=production

# Database Path
DB_PATH=/tmp/xpp-metadata.db

# Redis Cache Configuration (optional - improves performance)
REDIS_ENABLED=false
# REDIS_URL=redis://localhost:6379
# CACHE_TTL=3600  # Cache TTL in seconds (default: 3600 = 1 hour)

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window
RATE_LIMIT_STRICT_MAX_REQUESTS=20  # Strict limit for expensive operations
RATE_LIMIT_AUTH_MAX_REQUESTS=5  # Limit for authentication attempts

# Azure Blob Storage (optional - for cloud deployment)
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
# BLOB_CONTAINER_NAME=xpp-metadata
# BLOB_DATABASE_NAME=databases/xpp-metadata-latest.db

# Metadata Extraction (for local development)
# PACKAGES_PATH=C:\AOSService\PackagesLocalDirectory
# METADATA_PATH=./metadata
# MODEL_NAME=CustomModel

# Custom Extensions Configuration
# CUSTOM_MODELS_PATH=C:\AOSService\PackagesLocalDirectory
# CUSTOM_MODELS=ISV_CustomModule1,ISV_CustomModule2,CompanyExtensions
# EXTENSION_PREFIX=ISV_
# EXTRACT_MODE=all  # Options: 'all', 'standard', 'custom'

# Authentication (optional)
# AZURE_TENANT_ID=your-tenant-id
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret
